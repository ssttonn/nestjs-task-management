datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum TaskStatus {
    PENDING
    IN_PROGRESS
    COMPLETED
}

model User {
    id        Int      @id @unique @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    tasks     Task[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([id, name, email])
    @@map("users")
}

model Task {
    id          Int        @id @unique @default(autoincrement())
    title       String
    description String
    status      TaskStatus @default(PENDING)
    createdAt   DateTime   @default(now())
    updatedAt   DateTime   @updatedAt
    User        User?      @relation(fields: [userId], references: [id])
    userId      Int?

    @@unique([title, userId])
    @@index([id, title, description, status, createdAt, updatedAt, userId])
    @@map("tasks")
}
